<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>   

        <template id="customer_report">

            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <!-- <t t-foreach="count" t-as="o"> -->

                    <div class="page">

                        <style>

                            .report-container {
                                width: 1000px;
                                margin: 0px auto;
                                }
                            .left {
                                width: 38%;
                                display: block;
                                float: left;
                                }
                            .left img{
                                width: 360px;
                                display: block;
                                }
                            .mid {
                                width: 26%;
                                float: left;
                                }
                            .mid img{
                                width: 120px;
                                display: block;
                                margin: 0px auto;
                                }
                            .right {
                                width: 30%;
                                display: block;
                                float: left;
                                text-align: left;
                                margin-top: 100px;
                                }
                            .right .solid {
                                width: 30%;
                                float: left;
                                font-weight: bold;
                                margin-bottom: 10px;
                                font-size: 20px;
                                margin-left: 60px;
                                }
                            .right .liquid {
                                width: 50%;
                                float: left;
                                text-decoration: underline;
                                margin-bottom: 10px;
                                font-size: 20px;
                                }
                            .head {
                                width: 100%;
                                text-align: center;
                                text-decoration: underline;
                                margin-top: 30px;
                                float: left;
                                }
                            table {
                                border: 1px solid #000;
                                width: 90%;
                                margin: 0px auto;
                                border-spacing: 0px;
                                }
                            table tr th,
                            table tr td {
                                border-right: 1px solid #000;
                                text-align: center;
                            }
                            table tr th {
                                padding: 10px 0px;
                                
                            }
                            table tr td {
                                border-top: 1px solid #000;
                                padding: 5px 0px;
                            }
                            
                            .sign {
                                width: 100%;
                                float: left;
                                }
                            .sign .solid {
                                width: 100%;
                                text-align: left;
                                float: left;
                                font-weight: bold;
                                margin-top: 70px;
                                margin-left: 70px;
                                }

                            .date {
                                width: 50%;
                                float: left;
                                margin: 0px auto;
                            }

                            .header {
                                display: none !important;
                            }

                            .footer {
                                display: none !important;
                            }
                                        
                        </style>

                        <div class="report-container">
            
                            <div class="head">
                                <h2>STOCK REPORT</h2>
                            </div>

                            <div style="float:left; width: 100%;">
                             
                                <p style=" width: 50%; text-align: center; padding: 0px 50px; margin: 0px auto">
                                    <b><span class="solid">Branch: </span></b>
                                    <span class="liquid" t-esc="branch"></span>
                                </p>
                            </div>

                            
                            <table>

                                <tr>
                                    <th style="text-align:left;padding-left:8px">Sr No</th>
                                    <th style="text-align:left;padding-left:8px">NAME</th>
                                    <th style="text-align:left;padding-left:8px">TOTAL PURCHASE</th>
                                    <th style="text-align:left;padding-left:8px">TOTAL SALE</th>
                                    <th style="text-align:left;padding-left:8px">REMAINING</th>

                                </tr>

                                <t t-set="i" t-value="1"/>

                                <t t-foreach="prod" t-as="o">

                                    <tr>
                                        <td style="text-align:left;padding-left:8px">
                                            <t t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td style="text-align:left;padding-left:8px">
                                            <span t-esc="o.name"></span>
                                        </td>
                                        <td style="text-align:left;padding-left:8px">
                                            <span t-esc="'{:0,}'.format(int(float(get_purchase(o.id))))"></span>      
                                        </td>
                                        <td style="text-align:left;padding-left:8px">
                                            
                                            <span t-esc="'{:0,}'.format(int(float(get_sale(o.id))))"></span>
                                            
                                        </td>
                                        <td style="text-align:left;padding-left:8px">

                                             <span t-esc="'{:0,}'.format(int(float(get_remain(o.id))))"></span>
                                        </td>
                                        

                                    </tr>

                                </t>
                                
                            </table>

                        </div>

                    </div>

                    <!-- </t> -->

                </t>
            </t>

        </template>

    </data>

</openerp>