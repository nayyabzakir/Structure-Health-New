<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>   

        <template id="module_report">

            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <t t-foreach="docs" t-as="o">

                        <div class="page">

                            <style>

                                @font-face {
                                    font-family: 'archisticonormal';
                                    src: url('/client_bill/static/src/fonts/archistico_simple-webfont.woff2') format('woff2'),
                                         url('/client_bill/static/src/fonts/archistico_simple-webfont.woff') format('woff');
                                    font-weight: normal;
                                    font-style: normal;
                                }

                                @media (min-width: 992px) {
                                    .container {
                                        width: 100%;
                                    }
                                }

                                @media (min-width: 768px)
                                .container {
                                    width: 100%;
                                }
                                .container {
                                    width: 100%;
                                }
                                .english {
                                    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
                                }
                                body {
                                    margin: 0px !important;
                                }
                                body.o_in_iframe {
                                    margin-top: 0px!important;
                                }
                                .main-data {
                                    width: 100%;
                                }
                                .center-data {
                                    width: 1000px;
                                    margin : 0px;
                                    
                                }
                                .new-data {
                                    width: 630px;
                                    margin : 0px auto;

                                }
                                table, td, th {
                                    border: 2px solid;
                                    border-collapse: collapse;
                                    padding: 10px;
                                    text-align: center;
                                    margin: 10px 0px 10px 0px;
                                    border-color: #000;
                                }
                                table tr td:first-child,
                                table tr th:first-child {
                                    max-width: 260px;
                                    width: 260px;
                                    min-width: 260px;
                                    text-align: left;
                                    padding-left: 20px;
                                }
                                table tr td:nth-child(2),
                                table tr th:nth-child(2) {
                                    max-width: 165px;
                                    width: 165px;
                                    min-width: 165px;
                                    text-align: left;
                                    padding-left: 20px;
                                }

                                table tr td:nth-child(3),
                                table tr th:nth-child(3) {
                                    max-width: 165px;
                                    width: 165px;
                                    min-width: 165px;
                                    text-align: left;
                                    padding-left: 20px;
                                }
                                .clearfloat {
                                    clear: both;
                                    float: none;
                                }
                                .client {
                                text-align: right;
                                margin-right: 30px;
                                font-weight: bold;
                                font-size: 25px;
                                }
                                .bill {
                                    width: 90%;
                                }
                                .bill p {
                                    margin-left: 15px;
                                    font-size: 20px;
                                    font-weight: bold;
                                }

                                .endline {

                                    width: 70%;
                                    margin: 0px auto;
                                    text-align: center;
                                    font-family: 'archisticonormal'; 
                                    font-size: 25px;                              
                                }

                            </style>
      
                            <div class="main-data">

                                <div class="center-data">

                                    <div class="new-data">
                                        <div class="client">
                                            <span>CLIENT BILL</span>
                                        </div>

                                        <t t-set="num" t-value="get_due()" />

                                        <img src="/client_bill/static/src/img/company.jpeg" alt="" />
                                        
                                        <table width="50%" style="float: right;">
                                            <tr>
                                                <th colspan="2">
                                                    <span t-esc="o.partner_id.name"></span>
                                                </th>
                                            </tr>
                                            <tr>
                                                <th>No.</th>
                                                <th>
                                                    <span t-esc="o.membership_no"></span>
                                                </th>
                                            </tr>
                                            <tr>
                                                <th>Billing Month</th>

                                                <th>
                                                    <span t-esc="time.strftime('%B-%Y',time.strptime(o.date_invoice,'%Y-%m-%d'))"></span>
                                                </th>
                                            </tr>
                                            <tr>
                                                <th>Due Date</th>
                                                <t t-if = "num == 1">
                                                    <th>
                                                        <span t-esc="time.strftime('%d-%m-%Y',time.strptime(o.due_date,'%Y-%m-%d'))"></span>
                                                    </th>
                                                </t>
                                                <t t-if = "num == 0">
                                                    <th>
                                                        -
                                                    </th>
                                                </t>
                                            </tr>
                                        </table>

                                        <br class="clearfloat"/>
                                        <span class="bill"><p><strong>Bill Summary:</strong></p></span>
                                        <table width="100%">
                                            <tr>
                                                <th>Description</th>
                                                <th>Previous</th>
                                                <th>Current</th>
                                            </tr>

                                            <t t-set= "end_total" t-value="0"/>
                                            <t t-foreach="o.invoice_line_ids" t-as="data">
                                                <tr>
                                                    <td>
                                                        <b>
                                                            <span t-esc="data.name"></span>
                                                        </b>
                                                    </td>
                                                    <td>-</td>
                                                    <td>
                                                       <b>
                                                            <span t-esc="'{:0,}'.format(int(float(data.price_unit)))"></span>
                                                        </b>
                                                       <t t-set= "end_total" t-value="end_total+data.price_unit"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <tr>
                                                <td><strong>Sub Total</strong></td>
                                                <td>-</td>
                                                <td>
                                                    <b>
                                                        <span t-esc="'{:0,}'.format(int(float(end_total)))"></span>
                                                    </b>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td><strong>Total Payable</strong></td>
                                                <td>-</td>
                                                <td>
                                                    <b>
                                                        <span t-esc="'{:0,}'.format(int(float(end_total)))"></span>
                                                    </b>
                                                </td>
                                            </tr>
                                        </table>
                                        <br class="clearfloat"/>
                                        <span class="bill"><p>- Please make your payment on <b>Cash.</b></p></span>

                                        <div class="endline">
                                            <i><span>GO IN SOFT, COME OUT HARD</span></i>
                                        </div>

                                    </div>

                                </div>

                            </div>

                        </div>

                    </t>

                </t>
            </t>

        </template>

    </data>

</openerp>