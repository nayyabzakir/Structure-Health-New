<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>   

        <template id="customer_report">

            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <!-- <t t-foreach="count" t-as="o"> -->

                    <div class="page">

                        <style>

                            .report-container {
                                width: 1000px;
                                margin: 0px auto;
                                }
                            .left {
                                width: 38%;
                                display: block;
                                float: left;
                                }
                            .left img{
                                width: 360px;
                                display: block;
                                }
                            .mid {
                                width: 26%;
                                float: left;
                                }
                            .mid img{
                                width: 120px;
                                display: block;
                                margin: 0px auto;
                                }
                            .right {
                                width: 30%;
                                display: block;
                                float: left;
                                text-align: left;
                                margin-top: 100px;
                                }
                            .right .solid {
                                width: 30%;
                                float: left;
                                font-weight: bold;
                                margin-bottom: 10px;
                                font-size: 20px;
                                margin-left: 60px;
                                }
                            .right .liquid {
                                width: 50%;
                                float: left;
                                text-decoration: underline;
                                margin-bottom: 10px;
                                font-size: 20px;
                                }
                            .head {
                                width: 100%;
                                text-align: center;
                                text-decoration: underline;
                                margin-top: 30px;
                                float: left;
                                }
                            table {
                                border: 1px solid #000;
                                margin: 10px 0px 0px;
                                width: 100%;
                                float: left;
                                border-spacing: 0px;
                                }
                            table tr th,
                            table tr td {
                                border-right: 1px solid #000;
                                text-align: center;
                            }
                            table tr th {
                                padding: 10px 0px;
                                
                            }
                            table tr td {
                                border-top: 1px solid #000;
                                padding: 5px 0px;
                            }
                            
                            .sign {
                                width: 100%;
                                float: left;
                                }
                            .sign .solid {
                                width: 100%;
                                text-align: left;
                                float: left;
                                font-weight: bold;
                                margin-top: 70px;
                                margin-left: 70px;
                                }

                            .date {
                                width: 50%;
                                float: left;
                                margin: 0px auto;
                            }

                            .header {
                                display: none !important;
                            }

                            .footer {
                                display: none !important;
                            }
                                        
                        </style>

                        <div class="report-container">
            
                            <div class="head">
                                <h2>MEMBERSHIP REPORTS FOR <span t-esc="rep_type"></span></h2>
                            </div>
                            <t t-set="num" t-value="numb" />
                            <t t-if="num == 1">

                                <div style="float:left; width: 100%;">
                                    <p style="float:left; width: 50%; text-align: right; padding: 0px 50px;">
                                        <b><span class="solid">From: </span></b>
                                        <span class="liquid" t-esc="date_from"></span>
                                    </p>

                                    <p style="float:left; width: 50%; text-align: left; padding: 0px 50px;">
                                        <b><span class="solid">To: </span></b>
                                        <span class="liquid" t-esc="date_to"></span>
                                    </p>
                                </div>

                            </t>

                            
                            <table>
                                <tr>
                                    <th>Sr No</th>
                                    <th style="text-align:left;padding-left:8px">NAME</th>
                                    <th>MEMBERSHIP NO</th>
                                    <th>DOJ</th>
                                    <th style="text-align:left;padding-left:8px">PACKAGE</th>
                                    <th>BRANCH</th>
                                    <th style="text-align:left;padding-left:8px">PACKAGE CHARGES</th>

                                </tr>

                                <t t-set="i" t-value="1"/>
                                <t t-set="total" t-value="0"/>
                                <t t-foreach="membership" t-as="o">

                                    <tr>
                                        <td>
                                            <t t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td style="text-align:left;padding-left:8px">
                                            <span t-esc="o.name"></span>
                                        </td>
                                        <td>
                                            <span t-esc="o.memship_no"></span>   
                                            
                                        </td>
                                        <td>
                                            <span t-esc="o.joining"></span>
                                        </td>
                                        <td style="text-align:left;padding-left:8px">
                                            <span t-esc="o.package.name"></span>
                                        </td>
                                        <td style="padding:3px">
                                            <span t-esc="o.branch.name"></span>   
                                        </td>
                                        <td style="text-align:left;padding-left:8px">
                                            <span t-esc="'{:0,}'.format(int(float(o.package_charge)))"></span>
                                        </td>
                                        <t t-set="total" t-value="total+o.package_charge"/>

                                    </tr>

                                </t>
                                <tr>
                                    <td colspan="6" style="font-weight:bold">Total</td>
                                    <td style="text-align:left;padding-left:8px;font-weight:bold">
                                        <span t-esc="'{:0,}'.format(int(float(total)))"></span>
                                    </td>
                                </tr>
                                
                            </table>

                        </div>

                    </div>

                    <!-- </t> -->

                </t>
            </t>

        </template>

    </data>

</openerp>